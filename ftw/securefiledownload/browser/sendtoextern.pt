<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
	xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en"
	metal:use-macro="here/main_template/macros/master"
    i18n:domain="ftw.securefiledownload">
    <body>
        <metal:main fill-slot="main">
            <div metal:define-macro="main">
                <h1 i18n:translate="ftwsfd_send_to_external">Send file to external</h1>
                <form action="" method="post" name="form">
                    <table>
                        <tr>
                            <td i18n:translate="">
                                Email 
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="text"
                                       name="emails"
                                       size="60"
                                       tal:attributes="value python:request.get('emails','')"
                                       value=""
                                       />
                            </td>
                        </tr>
                        <tr>
                            <td i18n:translate="ftwsfd_comment">
                                Comment
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <textarea name="comment"
                                          cols="50"
                                          rows="10"
                                          tal:content="python:request.get('comment','')">
                                </textarea>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="submit"
                                       i18n:attributes="value ftwsfd_send"
                                       value="send file"
                                       name="submit"
                                       />
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </metal:main>
    </body>
</html>